{
  "$schema": "../node_modules/@tauri-apps/cli/config.schema.json",
  "productName": "eco-pediatrics-station",
  "version": "0.1.0",
  "identifier": "com.eco-pediatrics.manager",
  "build": {
    "frontendDist": "../out",
    "devUrl": "http://localhost:3000",
    "beforeDevCommand": "npm run dev",
    "beforeBuildCommand": "npm run build"
  },
  "app": {
    "windows": [
      {
        "label": "main",
        "title": "Eco-Pediatrics Station Control",
        "width": 1440,
        "height": 900,
        "resizable": true,
        "fullscreen": false,
        "maximized": true,
        "alwaysOnTop": false,
        "devtools": true,
        "url": "/station"
      }
    ],
    "security": {
      "csp": "default-src 'self'; connect-src 'self' http://localhost:8000 ws://localhost:8000 http://127.0.0.1:8000 ws://127.0.0.1:8000; style-src 'self' 'unsafe-inline'; font-src 'self' data:; img-src 'self' data: http://localhost:8000 http://127.0.0.1:8000;"
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}